    "dotenv": "^17.2.2",
    "next": "^15.5.2",
    "postcss": "^8.5.3",
    "react": "18.3.1",
    "react-device-detect": "^2.2.3",
    "react-dom": "18.3.1",
    "typed.js": "^2.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.1",
    "@types/react": "18.3.12",
    "autoprefixer": "^10.4.21",
    "fs-extra": "^11.3.0",
    "microcms-typescript": "^1.0.15",
    "rss-parser": "^3.13.0",
