{
  "name": "portfolio",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4200",
    "build": "next build",
    "build:posts": "ts-node --project tsconfig.builder.json ./src/builder/posts.ts",
    "start": "next start",
    "lint": "biome check ./",
    "fmt": "biome check --apply ./",
    "fmt:unsafe": "biome check --apply-unsafe ./",
